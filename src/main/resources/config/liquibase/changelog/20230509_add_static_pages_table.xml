    <changeSet author="your_name" id="create_static_pages_table">
        <createTable tableName="static_pages">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="content_about" type="text"/>
            <column name="content_education" type="text"/>
            <column name="content_students" type="text"/>
            <column name="content_partners" type="text"/>
            <column name="content_confidential" type="text"/>
            <column name="content_contacts" type="text"/>
        </createTable>
    </changeSet>
</databaseChangeLog>
